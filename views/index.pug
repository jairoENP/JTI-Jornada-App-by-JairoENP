                            p #{Math.round(avance.muMontecarlo * 100) / 100}
                        div.variables__objetivo
                            h3 OBJETIVO
                            p #{Math.round(avance.objMontecarlo * 100) / 100} 
                        div.variables__cumplimiento
                            h3 AVANCE
                            p(class=`${avance.colorMontecarlo == 3 ? 'variables__color--verde' : avance.colorMontecarlo == 2 ? 'variables__color--amarillo' : 'variables__color--rojo'} variables__color`) #{Math.round(avance.avanceMontecarlo * 10000) / 100} %
                article.variables__variable 
